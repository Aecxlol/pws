<!DOCTYPE html>
<html lang="">
    <head>
        <meta charset="UTF-8">
        <title>Portfolio de DamienWeb - Administration{% block title %}{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="/img/logo/favicon.png">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="/css/main.css">
            {#            {{ encore_entry_link_tags('app') }} #}
        {% endblock %}

        {% block javascripts %}
            <script src="/js/main.js" defer></script>
            {#            {{ encore_entry_script_tags('app') }} #}
        {% endblock %}
    </head>
    <body class="admin-body path{{ app.request.pathInfo|replace({'/': '-'}) }}">
        <div class="admin-container">
            {{ include('admin/partials/_sidebar.html.twig') }}
            <div class="admin-content">
                <div class="admin-main-title">
                    <h3 class="no-margin white font-50 uppercase">Administration</h3>
                </div>
                {{ include('admin/partials/_flash_messages.html.twig') }}
                {% block body %}

                {% endblock %}
            </div>
        </div>
    </body>
</html>
